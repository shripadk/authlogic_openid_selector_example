<% form_for @user do |f| %>
  <%= f.error_messages %>
	<p>
		<%= f.label :name %><br />
		<%= f.text_field :name, :default => @user.name %><br />
	</p>

	<p>
		<%= f.label :email %><br />
		<%= f.text_field :email, :default => @user.email %><br />
	</p>

	<p>
		<%= f.submit "Submit", :disable_with => 'Submiting...' %>
	</p>
<% end %>